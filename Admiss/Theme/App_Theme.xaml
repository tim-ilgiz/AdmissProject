<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm ="clr-namespace:Admiss.ViewModel"
                    xmlns:view ="clr-namespace:Admiss.View">

    <DataTemplate DataType="{x:Type vm:Page1ViewModel}">
        <view:Page1View/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:PageCameraViewModel}">
        <view:PageCamera/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:InfoViewModel}">
        <view:InfoView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ResultLoadViewModel}">
        <view:ResultLoadView/>
    </DataTemplate>
    <Brush x:Key="BackGroundAll">#014076</Brush>
    <Color x:Key="DrOrange">#ff6805</Color>
    <Color x:Key="DrWhite">White</Color>
    <Color x:Key="DrWheat">Wheat</Color>
    <Color x:Key="DrDarkOrange">#fc3424</Color>
    <Color x:Key="DrBlack">#232323</Color>
    <Color x:Key="DrGray">#dddcda</Color>
    <CornerRadius x:Key="DrCornerRad">15</CornerRadius>
    <FontFamily x:Key="DrFont">Arial</FontFamily>
    <BooleanToVisibilityConverter x:Key="BoolToVis"/>

    <Style x:Name="buttonst" x:Key="Button_St"  TargetType="{x:Type Button}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Height" Value="200"/>
        <Setter Property="Panel.ZIndex" Value="3"/>
        <Setter Property="Background" Value="#014076" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="./#PF BeauSans Pro"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" Opacity="50" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border1" CornerRadius="10" Background="{TemplateBinding Background}" BorderThickness="4" BorderBrush="White">
                        <Grid>
                            <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#022B51" />
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#021B32" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="Black" Direction="310" ShadowDepth="0" Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource Button_St}" 
           x:Key="ButtonElse" 
           TargetType="{x:Type Button}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border1" CornerRadius="10" Background="#014076" BorderThickness="5" BorderBrush="White">
                        <Grid>
                            <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Button.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="border1" 
                                        AutoReverse="True" 
                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" 
                                        To="#014076" 
                                        RepeatBehavior="Forever" 
                                        Duration="0:0:1.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SliderTemplate" TargetType="{x:Type Slider}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="Red" BorderThickness="9" Width="10" Height="400"/>
                        <Track>
                            <Track.Thumb>
                                <Thumb x:Name="Thumb" Background="Red">
                                    <Thumb.Template>
                                        <ControlTemplate>
                                            <Grid>
                                                <Ellipse Height="100" Width="100" StrokeThickness="10" Fill="Red">

                                                </Ellipse>
                                            </Grid>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="MainStyle">
        <Setter Property="Control.FontFamily" Value="{StaticResource DrFont}"/>
        <Setter Property="Control.Foreground">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Color="{StaticResource DrBlack}"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Control.Background">
            <Setter.Value>
                <LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="0.5,0">
                    <GradientStop Color="#dddcda" Offset="0"/>
                    <GradientStop Color="White" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type Border}" x:Key="Line_border">
        <Setter Property="Height" Value="2"/>
        <Setter Property="Width" Value="500"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>
    
    <Style x:Key="ClockStyle">
        <Setter Property="Control.FontFamily" Value="{StaticResource DrFont}"/>
        <Setter Property="Control.Foreground">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Color="{StaticResource DrBlack}"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Control.Background">
            <Setter.Value>
                <LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="0.5,0">
                    <GradientStop Color="{StaticResource DrWhite}"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderBrush">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource DrOrange}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="4" />
        <Style.Triggers>
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter Property="BorderBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource DrDarkOrange}"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderThickness" Value="6" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="BorderSimpleStyle" TargetType="{x:Type Border}">
        <Setter Property="Border.Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0.5,0">
                    <GradientStop Color="{StaticResource DrOrange}" Offset="0"/>
                    <GradientStop Color="{StaticResource DrDarkOrange}" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter Property="BorderBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource DrBlack}"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderThickness" Value="4" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ButtonMediaStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="{TemplateBinding Background}">
                        <ContentPresenter />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonSimpleStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="{TemplateBinding Background}">
                        <ContentPresenter />
